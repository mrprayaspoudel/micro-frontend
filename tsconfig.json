{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*/src"],
      "@host/*": ["host/src/*"],
      "@apps/*": ["apps/*/src"]
    }
  },
  "include": [
    "shared/**/*",
    "host/**/*",
    "apps/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/build"
  ]
}
